extends layout.pug

block head 
    link(rel="stylesheet", href="/countries.css")

block content   
    h2 Regions
    form(action="/regions", method="get")
        label(for="topN") Show Top N Results:
        input(type="number", name="topN", id="topN", min="1", max="100")
        button(type="submit") Filter 
    table 
        thead 
            th.text-center Country Code 
            th Name 
            th.number Region 
        tbody 
            each row in rows 
                tr 
                    td.fit #{row.Code}
                    td #{row.Name}
                    td #{row.Region}